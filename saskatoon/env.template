# .env local environment settings template file
# copy this file to saskatoon/.env and adapt it to your needs
# SECURITY WARNING: keep the .env file out of source control!



### COMMON SETTINGS ###
# These settings are common across all deployment types

# SECURITY WARNING: keep the secret key used in production secret!
# https://docs.djangoproject.com/fr/3.1/ref/settings/#secret-key
SASKATOON_SECRET_KEY='<KEY>'

# SECURITY WARNING: don't run with debug turned on in production!
# https://docs.djangoproject.com/en/dev/ref/settings/#debug
SASKATOON_DEBUG=yes

# TURN DRF BROWSABLE API ON/OFF
DRF_BROWSABLE_API_MODE=no

# Time Zone
SASKATOON_TIME_ZONE='America/Toronto'

## Optional Email Configuration ##
# SASKATOON_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# SASKATOON_EMAIL_USE_TLS=True
# SASKATOON_EMAIL_HOST=smtp.gmail.com
# SASKATOON_EMAIL_PORT=587
# SASKATOON_EMAIL_HOST_USER='<gmail_user>'
# SASKATOON_EMAIL_HOST_PASSWORD='<gmail_password>'
# SASKATOON_EMAIL_FROM='Saskatoon Team <noreply@domain.org>'
# SASKATOON_EMAIL_REPLY_TO='Saskatoon Team <reply@domain.org>'

## Optional Test Configuration ##
# SASKATOON_TEST_WEBDRIVER=Chrome
# SASKATOON_URL=http://localhost:8000
# SASKATOON_ADMIN_EMAIL=dev@dev.com
# SASKATOON_ADMIN_PASSWORD=dev

## Optional Server/Domain Configuration ##
# SASKATOON_SERVER_IP='123.45.666.7'
# SASKATOON_DOMAIN_NAME='subdomain.domain.org'

### COMMON SETTINGS END ###



### DOCKER DEVELOPMENT SETTINGS (default) ###
# These settings are used when running with docker-compose
# This is the default development setup with all services in containers

# Database settings
SASKATOON_DB_ENGINE=django.db.backends.mysql
SASKATOON_DB_NAME=saskatoon_dev
SASKATOON_DB_USER=saskatoon
SASKATOON_DB_PASSWORD=saskatoon
SASKATOON_DB_HOST=db

# Controls whether to run fixtures/init on container startup
# Comment out to persist data edits, but remember to uncomment when pulling fixture changes
SASKATOON_INIT_FIXTURES=true

# Redis settings
SASKATOON_REDIS_HOST=redis
SASKATOON_REDIS_PORT=6379

DJANGO_SUPERUSER_EMAIL=dev@dev.com
DJANGO_SUPERUSER_PASSWORD=dev

### DOCKER DEVELOPMENT SETTINGS END ###



### DOCKER WITH EXTERNAL DB SETTINGS ###
# Uncomment and modify these settings if running the web server in Docker
# but want to connect to a database on your host machine
# Note: Use 'local' as the host (not localhost or 127.0.0.1) to connect to host machine

# SASKATOON_DB_ENGINE=django.db.backends.mysql
# SASKATOON_DB_NAME=saskatoon_dev
# SASKATOON_DB_USER=<user>
# SASKATOON_DB_PASSWORD=<password>
# SASKATOON_DB_HOST=local

### DOCKER WITH EXTERNAL DB SETTINGS END ###



